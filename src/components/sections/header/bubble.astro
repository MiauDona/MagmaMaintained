---
interface Props {
	opacity: string;
  left?: string;
  top?: string;
  right?: string;
}
const opacity = Astro.props.opacity || '1';
const left = Astro.props.left || '0';
const top = Astro.props.top || '0';
const right = Astro.props.right || '0';


---

<div class="mi-circulo"></div>
<style define:vars={{ opacity, left, top, right }}>
    
    .mi-circulo {
      width: 55px;
      height: 55px;
      background-color: var(--color-secondary);
      opacity: var(--opacity);
      border-radius: 50%;
      position: absolute;
      top: var(--top);
      left: var(--left);
      right: var(--right);
      z-index: 0;
    }
    @media (max-width: 916px) {
      .mi-circulo {
        display: none;
      }
    }
    
</style>